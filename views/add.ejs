<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><%= title%></h1>
        <%- include ("./partials/messages") %>
        <form method="POST" action="/events/add" id="eventform">
            <div class="form-group">
                <label for="title">Title</label>
                <input name="title" type="text" class="form-control"></input>
            </div>
            <div class="form-group">
                <label for="details">Details</label>
                <textarea class="form-control" name="details"></textarea>
            </div>
            <div class="form-group">
                <label for="recurrent">Recurrent</label>
                <input name="recurrent" type="checkbox" id="recurrentValue"></input>
            </div>
            <div class="form-group">
                <label for="recurrentType">Recurrence type</label>
                <select name="recurrentType" id="recurrentType" form="eventform">
                    <option value="-">-</option>
                    <option value="daily">Daily</option>
                    <option value="weekly">Weekly</option>
                    <option value="monthly">Monthly</option>
                    <option value="yearly">Yearly</option>
                </select>
            </div>
            <div class="form-group">
                <label for="startDate">Start date</label>
                <input name="startDate" type="datetime-local" class="form-control"></input>
            </div>
            <div class="form-group">
                <label for="endDate">End date</label>
                <input name="endDate" type="datetime-local" class="form-control"></input>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="submit">
                <a href="/dashboard" class="btn btn-success">Back</a>
            </div>
            <input hidden type="text" name="myName" value="<%= myName %>">
        </form>
        </div>
    </div>
</div>